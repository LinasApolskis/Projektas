{% extends 'baseNew.html.twig' %}

{% block title %}Admin Index!{% endblock %}

{% block main %}
    <div>
        <h1>Currencies</h1>

        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Code</th>
                <th scope="col">Alpha code</th>
                <th scope="col">Numeric code</th>
                <th scope="col">Rate</th>
                <th scope="col">Date updated</th>
                <th scope="col">Inverse rate</th>
            </tr>
            </thead>
            <tbody>
        {% for currency in currencies %}
            <tr>
            <th scope="row">{{ currency.name }}</th>
            <th scope="row">{{ currency.code }}</th>
            <th scope="row">{{ currency.alphaCode }}</th>
            <th scope="row">{{ currency.numericCode }}</th>
            <th scope="row">{{ currency.rate }}</th>
            <th scope="row">{{ currency.date }}</th>
            <th scope="row">{{ currency.inverseRate }}</th>
            </tr>
        {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% extends 'baseNew.html.twig' %}



{% block main %}
    {{ form_start(form) }}
    {{ form_row(form.message) }}
    <button type="submit" class="btn btn-primary">Send mass message</button>
    {% if action == false %}
        <h4>Your message could not be sent!</h4>
    {% else %}
        <h4>Messages sent!</h4>
    {% endif %}
    {{ form_end(form) }}
{% endblock %}

{% extends 'base.html.twig' %}


{% block main %}
    {{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.surname) }}
    {{ form_row(form.city) }}
    {{ form_row(form.address) }}
    {{ form_row(form.phone) }}

    <button type="submit" class="btn btn-outline-primary">Update details!</button>
    <a href="{{ path('changepassword') }}" class="btn btn-outline-primary" role="button">Change Password?</a>
    {{ form_end(form) }}
{% endblock %}
